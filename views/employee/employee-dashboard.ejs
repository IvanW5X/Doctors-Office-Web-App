<!-- HTML for Employee Dashboard -->
<!DOCTYPE html>
<html>
<head>
  <title>Employee Dashboard</title>
</head>
<body>
  <h1>Welcome, <%= fname %>!</h1>
  <div>
    <h2>Instructions</h2>
    <p>Text here</p>
  </div>
  <div>
    <h3>Data Tables:</h3>
    <div>
      <h3>Offices</h3>
      <table border="1">
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Phone Number</th>
        </tr>
        <% offices.forEach(office => { %>
        <tr>
          <td><%= office.office_name %></td>
          <td><%= office.location %></td>
          <td><%= office.phone_number %></td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div>
      <h3>Employees</h3>
      <p>table showing employee data</p>
    </div>
    <div>
      <h3>Doctors</h3>
      <table border="1">
        <tr>
          <th>Name</th>
          <th>Specialization</th>
          <th>Workplaces</th>
          <th>Appointments</th>
        </tr>
        <% doctors.forEach(doc => { %>
        <tr>
          <td><%= doc.fname %> <%= doc.lname %></td>
          <td><%= doc.specialization %></td>
          <td>workplaces array</td>
          <td>view appointments</td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div>
      <h3>Patients</h3>
      <p>a table of all patients with option to view their appointments and billing statements</p>
    </div>
  </div>
  <p> </p>
  <button type="button" onclick="window.location.href='/'">Log Out</button>
</body>
</html>