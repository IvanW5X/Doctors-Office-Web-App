<!-- HTML for Employee Dashboard -->
<!DOCTYPE html>
<html>
  <head>
    <title>Employee Dashboard</title>
    <script src="/events/employee-events.js"></script>
  </head>
  <body>
    <h1>Welcome, <%= fname %>!</h1>
    <div>
      <h2>Instructions</h2>
      <p>
        You may view all data related to the Doctor Offices database. You can
        view data our offices, employees, and patients. You can add new
        employees, doctors, patients and manage appointments and billing statements.
      </p>
    </div>
    <div>
      <div>
        <h3>Offices</h3>
        <table border="1">
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Phone Number</th>
          </tr>
          <% offices.forEach(office => { %>
          <tr>
            <td><%= office.office_name %></td>
            <td><%= office.location %></td>
            <td><%= office.phone_number %></td>
          </tr>
          <% }) %>
        </table>
      </div>
      <div>
        <h3>Employees</h3>
        <button type="button" class="addEmployeeBtn">Add an Employee</button>
        <table border="1">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
          </tr>
          <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.employee_id %></td>
            <td><%= employee.fname %> <%= employee.lname %></td>
            <td><%= employee.phone_number %></td>
            <td><%= employee.email %></td>
          </tr>
          <% }) %>
        </table>
      </div>
      <div>
        <h3>Doctors</h3>
        <button type="button" class="addDoctorBbtn">Add a Doctor</button>
        <table border="1">
          <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Offices</th>
            <th>Appointments</th>
          </tr>
          <% doctors.forEach(doc => { %>
          <tr>
            <td><%= doc.fname %> <%= doc.lname %></td>
            <td><%= doc.specialization %></td>
            <td>
              <button type="button" class="viewDoctorLocationsBtn">
                View Available Offices
              </button>
            </td>
            <td>
              <button type="button" class="viewDoctorAppointmentsBtn">
                View Appointments
              </button>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
      <div>
        <h3>Patients</h3>
        <button type="button" class="addPatientBtn">Add Patient</button>
        <table border="1">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Appointments</th>
            <th>Billing Info</th>
          </tr>
          <% patients.forEach(patient => { %>
          <tr>
            <td><%= patient.patient_id %></td>
            <td><%= patient.fname %> <%= patient.lname %></td>
            <td><%= patient.phone_number %></td>
            <td><%= patient.email %></td>
            <td><%= patient.address %></td>
            <td>
              <button type="button" class="viewPatientAppointmentsBtn">
                View Appointments
              </button>
            </td>
            <td>
              <button type="button" class="viewPatientBillingStatementsBtn">
                View Billing Info
              </button>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
    <p></p>
    <button type="button" onclick="window.location.href='/'">Log Out</button>
  </body>
</html>
