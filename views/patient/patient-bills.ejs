<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient Billing Information</title>
  </head>
  <body>
    <div>
      <h1>Billing Statements for <%= patient_name %></h1>
      <h2>Total Balance</h2>
      <p>$<%= total_amount.toFixed(2) %></p>
      <h2>Billing Statements</h2>
      <button type="button" class="add-bill-btn">
        Add Billing Statement
      </button>
      <table border="1">
        <tr>
          <th>Amount</th>
          <th>Billing Date</th>
          <th>Due Date</th>
        </tr>
        <% bills.forEach(bill => { %>
        <tr>
          <td>$<%= bill.amount_due.toFixed(2) %></td>
          <td><%= bill.billing_date %></td>
          <td><%= bill.due_date %></td>
        </tr>
        <% }) %>
      </table>
    </div>
    </div>
    <br/>
    <button type="button" onclick="window.location.href='/employee/dashboard/<%= employee_fname %>/<%= employee_ssn %>'">Back</button>
    <div>

    <!-- Add this after your "Add Billing Statement" button -->
    <div id="addBillModal" style="display:none; position:fixed; top:20%; left:35%; background:#fff; border:1px solid #ccc; padding:20px; z-index:1000;">
      <form id="addBillForm" method="POST" action="/employee/add-bill">
        <input type="hidden" name="employee_fname" value="<%= employee_fname %>">
        <input type="hidden" name="employee_ssn" value="<%= employee_ssn %>">
        <input type="hidden" name="employee_id" value="<%= employee_id %>">
        <input type="hidden" name="patient_id" value="<%= patient_id %>">
        <label for="appointment_id">Appointment ID:</label>
        <select name="appointment_id" id="appointment_id" required>
          <% appointments.forEach(app => { %>
            <option value="<%= app.appointment_id %>">
              <%= app.appointment_id %> - <%= app.date %> with Dr. <%= app.doctor_name %>
            </option>
          <% }) %>
        </select>
        <br><br>
        <label for="amount_due">Amount Due:</label>
        <input type="number" step="0.01" name="amount_due" id="amount_due" required><br><br>
        <label for="billing_date">Billing Date:</label>
        <input type="date" name="billing_date" id="billing_date" required><br><br>
        <label for="due_date">Due Date:</label>
        <input type="date" name="due_date" id="due_date" required><br><br>
        <button type="submit">Submit</button>
        <button type="button" onclick="document.getElementById('addBillModal').style.display='none'">Cancel</button>
      </form>
    </div>
    <script>
      document.querySelector('.add-bill-btn').addEventListener('click', function() {
        // Set billing_date to today's date in YYYY-MM-DD format
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('billing_date').value = today;
        document.getElementById('addBillModal').style.display = 'block';
      });
    </script>
  </body>
</html>
